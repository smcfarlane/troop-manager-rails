.flex.justify-center
  .flex.flex-col.gap-8(class="w-3/5")
    %p.text-2xl Sign up
    = form_for resource,
      as: resource_name,
      url: registration_path(resource_name),
      html: { class: 'flex flex-col gap-6', 'data-turbo-frame': '_top' } do |f|
      = render "devise/shared/error_messages", resource: resource

      .relative
        = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "basic-input peer"
        = f.label :name, 'Name', class: "basic-label scale-90 peer-placeholder-shown:scale-100 peer-focus:scale-90"
      .relative
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "basic-input peer"
        = f.label :email, 'Email', class: "basic-label scale-90 peer-placeholder-shown:scale-100 peer-focus:scale-90"
      .flex.flex-col.gap-1
        .relative
          = f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "basic-input peer"
          = f.label :password, 'Password', class: "basic-label scale-90 peer-placeholder-shown:scale-100 peer-focus:scale-90"
        - if @minimum_password_length
          .flex.justify-end
            %em (#{@minimum_password_length} characters minimum)
      .relative
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "basic-input peer"
        = f.label :password_confirmation, 'Password Confirmation', class: "basic-label  scale-90 peer-placeholder-shown:scale-100 peer-focus:scale-90"

      .flex.justify-end
        = f.submit "Sign Up", class: 'btn btn-primary'

    .flex.flex-col.gap-4
      = render "devise/shared/links"
